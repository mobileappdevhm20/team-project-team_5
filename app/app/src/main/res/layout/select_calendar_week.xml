<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/general_padding"
    >

    <TextView
        style="@style/TitleHeader"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Calendarweek" />

    <NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/week_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15.11.2020"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - " />

        <TextView
            android:id="@+id/week_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22.11.2020" />
    </LinearLayout>
    <TextView
        android:id="@+id/warning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="This week has been assigned already"
        android:lines="2"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:textAlignment="center"
        android:layout_marginVertical="8dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/assign_button"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Assign"
        />

</LinearLayout>